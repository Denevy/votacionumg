{% extends '::base.html.twig' %}

{% block body -%}
<div class="row">
                <div class="col-md-12">
                    <!-- Form Elements -->
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h1 class="page-title">Lista de tipo de preguntas</h1>
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                            <tr>
                                                <th>Tipo</th>
                                                <th>Acciones</th>
                                            </tr>
                                    </thead>
                                    <tbody>
                                        {% for entity in entities %}
                                            <tr>
                                                <td><a href="{{ path('tipopreguntum_edit', { 'id': entity.id }) }}">{{ entity.Tipo }}</a></td>
                                                <td>
                                                        <a href="{{ path('tipopreguntum_edit', { 'id': entity.id }) }}" class="btn btn-danger fa fa-edit"> Editar</a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>      
                                </table>
                            </div>
                            <a href="{{ path('tipopreguntum_new') }}" class="btn btn-success fa fa-check">
                            Nueva tipo
                            </a>
                        </div>
                    </div>
                     <!-- End Form Elements -->
                </div>
</div>
{% endblock %}
