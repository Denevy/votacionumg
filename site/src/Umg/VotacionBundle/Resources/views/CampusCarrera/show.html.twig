{% block body -%}
<div class="row">
            <div class="col-md-12">
                <!-- Form Elements -->
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h1 class="page-title"> Carrera: {{ entity.Carrera }}</h1>
                        <p class="lead">
                        Campus: {{ entity.Codigo}} - {{entity.Campus}} <br />
