{% extends '::base.html.twig' %}

{% block titulo %}
    <h1 class="page-title">Lista de Carreras</h1>
{% endblock %}

{% block body -%}
    <table class="table table-striped">
        <thead>
            <tr>
             
                <th>Carrera</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('carrera_show', { 'id': entity.id }) }}">{{ entity.Carrera }}</a></td>
                
                <td>

                        <a href="{{ path('carrera_show', { 'id': entity.id }) }} " class="btn btn-info btn-xs">Ver</a>

                        <a href="{{ path('carrera_edit', { 'id': entity.id }) }}" class="btn btn-info btn-xs">Editar</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            <a href="{{ path('carrera_new') }}" class="btn btn-primary">
                Crear Carrera
            </a>

    {% endblock %}
