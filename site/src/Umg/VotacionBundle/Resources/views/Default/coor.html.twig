{% extends '::coordinador.html.twig' %}
{% block titulo %}
    <h1 class="page-title">Bienvenido al sistema de evaluación docente</h1>
{% endblock %}

{% block body -%}

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h1> Encuestas activas </h1>
      </div>
      <div class="panel-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Carrera</th>
                    <th>Fecha finalización</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {%for evaluacion in evaluaciones %}
                <tr>
                    <td>{{evaluacion.CampusCarrera}}</td>
                    <td>{{evaluacion.FechaHoraFinal|date('Y-m-d H:i:s')}}</td>
                    <td>
                        <a href={{path('ver_resultado',{'id':evaluacion.id})}} class="icon-eye-open btn btn-success"> ver</a>
                    </td>
                {% endfor %}
            </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
{% endblock %}
