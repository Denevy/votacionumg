{% extends '::base.html.twig' %}
{% block body -%}
<div class= "row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Lista de Opciones
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Opción</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td><a href="{{ path('opcion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                <td>{{ entity.Opcion }}</td>
                                <td>
                                <ul>                                   
                                        <a href="{{ path('opcion_show', { 'id': entity.id }) }}" class="btn btn-success fa fa-money"> Ver</a>
                                   
                                        <a href="{{ path('opcion_edit', { 'id': entity.id }) }}" class="btn btn-danger fa fa-edit"> Editar</a>                                
                                </ul>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <a href="{{ path('opcion_new') }}" class="btn btn-info fa fa-list"> Crear Nueva Opción </a>

                </div>
            </div>
        </div>
    </div>
</div>

            
{% endblock %}
