{% extends '::base.html.twig' %}
{% block body -%}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h1>Opcion</h1>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                     <tbody>
                        <tr>
                            <th>Id</th>
                            <th>Opcion</th>                            
                        </tr>
                        <tr>
